{
  "name": "@imzer/core",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/tmorin/imzer.git"
  },
  "author": "Thibault Morin",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://gitlab.com/tmorin/imzer/issues"
  },
  "homepage": "https://gitlab.com/tmorin/imzer#README",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "test": "mocha --require ts-node/register test/*.spec.ts",
    "coverage": "nyc npm test --",
    "clean": "rimraf .nyc_output coverage lib logs",
    "build": "npm run clean && tsc"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "lib/**/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.0",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.5",
    "typescript": "^2.9.1"
  }
}

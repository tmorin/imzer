{
  "manifest_version": 2,
  "name": "imzer",
  "version": "1.2.2",
  "description": "imzer will help you to quickly share your location as well as to locate where the other guy is.",
  "icons": {
    "64": "icons/imzer-64.png",
    "128": "icons/imzer-128.png",
    "512": "icons/imzer-512.png"
  },
  "permissions": [
    "geolocation"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/imzer-64.png",
      "128": "icons/imzer-128.png",
      "512": "icons/imzer-512.png"
    },
    "default_title": "imzer"
  },
  "applications": {
    "gecko": {
      "id": "{3c3a0ba2-0346-4fc5-a727-6413ee03ee4e}"
    }
  }
}